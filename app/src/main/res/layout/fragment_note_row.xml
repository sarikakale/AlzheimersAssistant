<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context="com.example.sarika.alzheimerassistant.fragments.NoteRow">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#8FFF">


    <TextView

        android:id="@+id/NoteRow"
        android:text="Dummy Note"
        android:layout_gravity="center_vertical"
        android:layout_width="307dp"
        android:layout_height="match_parent"
        android:textColor= "@color/text_color"
        android:textSize="20sp"
        />

        <!-- quick and dirty divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="bottom"
        />

        <Button
            android:id="@+id/delete_notes"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:drawableRight="@drawable/ic_delete_black_24dp"
            android:textAllCaps="true" />
    </android.support.v7.widget.CardView>
</FrameLayout>
