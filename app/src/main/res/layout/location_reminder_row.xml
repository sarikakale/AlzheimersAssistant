<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dip"
    android:isScrollContainer="true"
    tools:context=".activity.CaregiverHomeActivity">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#8FFF">
    <RelativeLayout
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:contentDescription="TODO"
        android:src="@drawable/ic_add_location_black_24dp"
        android:layout_alignParentTop="true"
        android:paddingRight="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textColor="#FFF"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@+id/delete_reminder"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/locationreminderrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/icon"
        android:padding="2dp"
        android:textColor="#FFF"
        android:ellipsize="marquee"
        android:text="Description"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/delete_reminder"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:drawableRight="@drawable/ic_delete_forever_black_24dp"
        android:textAllCaps="true"
        android:layout_gravity="end|center_vertical|top"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="2dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>