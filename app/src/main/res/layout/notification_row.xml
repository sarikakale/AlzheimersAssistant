<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    tools:context="com.example.sarika.alzheimerassistant.activity.PatientActivities">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
        <Button
            android:id="@+id/reminders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:alpha="0.75"
            android:drawableLeft="@drawable/ic_add_location_black_24dp"
            android:shadowColor="@color/text_color"
            android:text="Reminders"
            android:layout_above="@+id/remindMe"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="25dp"
            />


    <!--<android.support.v7.widget.CardView
        android:id="@+id/remindermecard"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="1"
        android:layout_column="2"
        android:padding="10dp">-->

        <!--
    </android.support.v7.widget.CardViewdView>
-->

    <Button
        android:id="@+id/notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:alpha="0.75"
        android:drawableLeft="@drawable/ic_speaker_notes_black_24dp"
        android:shadowColor="@color/text_color"
        android:text="Notes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />


    <Button
        android:id="@+id/addfriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:alpha="0.75"
        android:drawableLeft="@drawable/ic_group_add_black_24dp"
        android:shadowColor="@color/text_color"
        android:text="Add Friend"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/remindMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:alpha="0.75"
        android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
        android:shadowColor="@color/text_color"
        android:text="REMIND ME"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/addfriend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</RelativeLayout>
